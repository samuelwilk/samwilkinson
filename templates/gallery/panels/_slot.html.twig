{# Shared slot template for rendering a single photo within a panel #}
<div class="absolute slot-photo"
     style="left: {{ slot.x }}%; top: {{ slot.y }}%; width: {{ slot.w }}%; height: {{ slot.h }}%; transform: rotate({{ slot.rot }}deg); z-index: {{ slot.z }};">
    <img
        src="{{ slot.photo.url }}"
        alt="{{ slot.photo.alt|default('') }}"
        class="w-full h-full object-contain"
        loading="lazy"
        decoding="async"
    />
</div>
