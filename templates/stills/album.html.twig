{% extends 'base.html.twig' %}

{% block title %}{{ collection.name }} - Stills - Sam Wilkinson{% endblock %}

{% block description %}{{ collection.description ?? ('Photo collection: ' ~ collection.name) }}{% endblock %}

{% block body_class %}accent-persimmon{% endblock %}

{% block head_extra %}
<style>
/* Smooth scrolling with reduced motion support */
@media (prefers-reduced-motion: no-preference) {
    .snap-x {
        scroll-behavior: smooth;
    }
}
</style>
{% endblock %}

{% block body %}
<main class="relative bg-gradient-to-br from-paper via-bone to-daylight min-h-screen">
    {# Subtle paper grain #}
    <div class="fixed inset-0 opacity-[0.02] mix-blend-multiply pointer-events-none" style="background-image: url('data:image/svg+xml,%3Csvg width=\'400\' height=\'400\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cfilter id=\'grain\'%3E%3CfeTurbulence baseFrequency=\'1.5\' numOctaves=\'3\'/%3E%3C/filter%3E%3Crect width=\'400\' height=\'400\' filter=\'url(%23grain)\' opacity=\'0.5\'/%3E%3C/svg%3E');"></div>

    {# Header #}
    <div class="relative max-w-7xl mx-auto px-6 md:px-8 pt-32 pb-12" data-view-toggle-target="header">
        {# Breadcrumb #}
        <nav class="mb-6">
            <a href="{{ path('app_stills') }}" class="inline-flex items-center gap-2 text-sm font-mono text-stone hover:text-persimmon transition-colors duration-200">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to Collections
            </a>
        </nav>

        {# Collection info #}
        <div>
            {# Label #}
            <div class="text-xs font-mono uppercase tracking-[0.2em] text-cognac mb-3">Photo Collection</div>

            {# Title #}
            <h1 class="font-display text-5xl md:text-6xl lg:text-7xl font-medium text-ink leading-[0.92] mb-6" style="letter-spacing: -0.02em;">
                {{ collection.name }}
            </h1>

            {# Description #}
            {% if collection.description %}
                <div class="relative max-w-3xl mb-6">
                    {# Hairline detail #}
                    <div class="absolute -left-6 top-3 w-4 h-px bg-persimmon/30"></div>
                    <p class="text-xl md:text-2xl text-graphite leading-relaxed font-light">
                        {{ collection.description }}
                    </p>
                </div>
            {% endif %}

            {# Metadata #}
            <div class="flex flex-wrap items-center gap-x-4 gap-y-2 text-sm text-stone">
                {% if collection.locationName %}
                    <div class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                        </svg>
                        <span>{{ collection.locationName }}</span>
                    </div>
                {% endif %}

                {% if collection.startDate %}
                    <div class="flex items-center gap-2 font-mono text-xs tabular-nums">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" />
                        </svg>
                        <span>
                            {{ collection.startDate|date('F Y') }}
                            {% if collection.endDate and collection.endDate != collection.startDate %}
                                - {{ collection.endDate|date('F Y') }}
                            {% endif %}
                        </span>
                    </div>
                {% endif %}

                <div class="flex items-center gap-2 font-mono text-xs tabular-nums">
                    <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                    </svg>
                    <span>{{ photos|length }} {{ photos|length == 1 ? 'photo' : 'photos' }}</span>
                </div>

                {% if collection.isRestricted %}
                    <div class="flex items-center gap-2 text-walnut">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                        </svg>
                        <span class="text-xs">Protected</span>
                    </div>
                {% endif %}
            </div>

            {# Divider #}
            <div class="mt-8 flex items-center gap-3">
                <div class="w-12 h-px bg-stone/30"></div>
                <div class="flex-1 h-px bg-stone/30"></div>
            </div>
        </div>
    </div>

    {# View Toggle and Photo Views #}
    {% if photos|length > 0 %}
    <div data-controller="view-toggle">
        {# View Toggle Buttons - Hidden on mobile (grid only), visible on desktop #}
        <div class="relative max-w-7xl mx-auto px-6 md:px-8 pb-16">
            <div class="hidden md:flex items-center gap-2" role="tablist">
                <button
                    data-view-toggle-target="showcaseButton"
                    data-action="click->view-toggle#showShowcase"
                    class="px-4 py-2 rounded text-sm font-mono transition-all duration-200 bg-bone text-graphite hover:bg-stone/10"
                    role="tab"
                    aria-pressed="false"
                    aria-controls="showcase-view"
                >
                    <span class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                        </svg>
                        Showcase
                    </span>
                </button>
                <button
                    data-view-toggle-target="gridButton"
                    data-action="click->view-toggle#showGrid"
                    class="px-4 py-2 rounded text-sm font-mono transition-all duration-200 bg-persimmon text-bone"
                    role="tab"
                    aria-pressed="true"
                    aria-controls="grid-view"
                >
                    <span class="flex items-center gap-2">
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 016 3.75h2.25A2.25 2.25 0 0110.5 6v2.25a2.25 2.25 0 01-2.25 2.25H6a2.25 2.25 0 01-2.25-2.25V6zM3.75 15.75A2.25 2.25 0 016 13.5h2.25a2.25 2.25 0 012.25 2.25V18a2.25 2.25 0 01-2.25 2.25H6A2.25 2.25 0 013.75 18v-2.25zM13.5 6a2.25 2.25 0 012.25-2.25H18A2.25 2.25 0 0120.25 6v2.25A2.25 2.25 0 0118 10.5h-2.25a2.25 2.25 0 01-2.25-2.25V6zM13.5 15.75a2.25 2.25 0 012.25-2.25H18a2.25 2.25 0 012.25 2.25V18A2.25 2.25 0 0118 20.25h-2.25A2.25 2.25 0 0113.5 18v-2.25z" />
                        </svg>
                        Grid
                    </span>
                </button>
            </div>
        </div>

        {# Photo Showcase - Horizontal Scroll with Panels (Desktop only) #}
        <div
            id="showcase-view"
            data-view-toggle-target="showcase"
            data-controller="photo-showcase-horizontal"
            data-photo-showcase-horizontal-collection-slug-value="{{ collection.slug }}"
            class="hidden md:block relative w-full overflow-x-hidden overflow-y-hidden pb-24 [&::-webkit-scrollbar]:hidden"
            style="height: calc(100vh + 4rem); touch-action: pan-x;"
            role="tabpanel"
        >
            <div class="relative flex" style="height: 110vh; padding-top: 2rem; padding-bottom: 2rem;">
                {% for panel in panels %}
                    <div
                        class="panel-container flex-shrink-0"
                        style="width: 100vw; height: 100vh; position: relative;"
                    >
                        {% if panel.layout == 'text_card' %}
                            {% include 'gallery/panels/_text_card.html.twig' with { panel: panel } %}
                        {% else %}
                            {% include 'gallery/panels/_photo_panel.html.twig' with { panel: panel } %}
                        {% endif %}
                    </div>
                {% endfor %}
            </div>
        </div>

        {# Photo Grid - Masonry Layout (Default on mobile, toggleable on desktop) #}
        <div
            id="grid-view"
            data-view-toggle-target="grid"
            class="relative max-w-7xl mx-auto px-6 md:px-8 pb-24 hidden"
            role="tabpanel"
            data-controller="photo-lightbox{% if collection.isRestricted and collection.allowDownloads %} photo-download{% endif %}"
            data-photo-lightbox-photos-value="{{ photos|map(p => {
                url: '/uploads/photos/' ~ p.filename,
                title: p.title,
                focalLength: p.focalLength,
                aperture: p.aperture,
                shutterSpeed: p.shutterSpeed,
                iso: p.iso,
                exposureCompensation: p.exposureCompensation
            })|json_encode|e('html_attr') }}"
            {% if collection.isRestricted and collection.allowDownloads %}
                data-photo-download-collection-slug-value="{{ collection.slug }}"
            {% endif %}
        >
            {# Download Toolbar - Only for authenticated restricted collections #}
            {% if collection.isRestricted and collection.allowDownloads %}
                <div class="mb-8 flex items-center justify-between gap-4 p-4 bg-bone/50 border-l-2 border-persimmon">
                    <div class="flex items-center gap-4">
                        <button
                            data-photo-download-target="selectAllButton"
                            data-action="click->photo-download#toggleSelectAll"
                            class="px-4 py-2 text-sm font-mono text-stone hover:text-persimmon transition-colors duration-200"
                        >
                            Select All
                        </button>
                        <div data-photo-download-target="selectedCount" class="text-sm font-mono text-graphite">
                            0 selected
                        </div>
                    </div>
                    <button
                        data-photo-download-target="downloadButton"
                        data-action="click->photo-download#downloadSelected"
                        disabled
                        class="px-6 py-2 bg-persimmon text-bone font-mono text-sm uppercase tracking-wider disabled:opacity-30 disabled:cursor-not-allowed hover:bg-[#d55a3a] transition-colors duration-200"
                    >
                        Download Selected
                    </button>
                </div>
            {% endif %}

            <div
                data-controller="stills-masonry"
                data-stills-masonry-columns-value="3"
                data-stills-masonry-gap-value="24"
                class="relative"
            >
                {% for photo in photos %}
                    <div
                        data-stills-masonry-target="item"
                        data-aspect-ratio="{{ photo.aspectRatio ?? 1.5 }}"
                        data-photo-index="{{ loop.index0 }}"
                        data-action="click->photo-lightbox#open"
                        class="group relative bg-bone rounded-lg overflow-hidden border border-stone/10 transition-all duration-500 ease-out hover:shadow-md cursor-pointer"
                    >
                        {# Selection Checkbox - Only for downloadable collections #}
                        {% if collection.isRestricted and collection.allowDownloads %}
                            <div class="absolute top-3 left-3 z-10" data-action="click->photo-lightbox#closeOnBackdrop:stop">
                                <label class="inline-flex items-center cursor-pointer">
                                    <input
                                        type="checkbox"
                                        data-photo-download-target="photoCheckbox"
                                        data-photo-id="{{ photo.id }}"
                                        data-action="change->photo-download#updateSelection click->photo-lightbox#closeOnBackdrop:stop"
                                        class="w-5 h-5 bg-bone/90 border-2 border-stone checked:bg-persimmon checked:border-persimmon focus:ring-2 focus:ring-persimmon focus:ring-offset-2 transition-all duration-200 cursor-pointer"
                                    />
                                </label>
                            </div>
                        {% endif %}

                        {# Image with lazy loading #}
                        <div class="relative overflow-hidden" style="padding-bottom: {{ (1 / (photo.aspectRatio ?? 1.5)) * 100 }}%;">
                            <img
                                data-src="{{ '/uploads/photos/' ~ photo.filename }}"
                                alt="{{ photo.title ?? collection.name ~ ' - Photo ' ~ loop.index }}"
                                class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 ease-out group-hover:scale-[1.02]"
                                loading="lazy"
                            />

                            {# Overlay on hover #}
                            <div class="absolute inset-0 bg-gradient-to-t from-ink/40 via-ink/10 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 ease-out"></div>
                        </div>

                        {# Photo metadata overlay with EXIF #}
                        {% set hasExif = photo.focalLength or photo.aperture or photo.shutterSpeed or photo.iso or photo.exposureCompensation %}
                        <div class="p-4">
                            {% if photo.title %}
                                <h3 class="font-display text-sm md:text-base text-ink group-hover:text-persimmon transition-colors duration-300 mb-1">
                                    {{ photo.title }}
                                </h3>
                            {% endif %}
                            {% if hasExif %}
                                <div class="text-xs font-mono text-stone/80 mt-1">
                                    {% if photo.focalLength %}{{ photo.focalLength }}{% endif %}
                                    {% if photo.aperture %}{% if photo.focalLength %} • {% endif %}{{ photo.aperture }}{% endif %}
                                    {% if photo.shutterSpeed %}{% if photo.focalLength or photo.aperture %} • {% endif %}{{ photo.shutterSpeed }}{% endif %}
                                    {% if photo.iso %}{% if photo.focalLength or photo.aperture or photo.shutterSpeed %} • {% endif %}ISO {{ photo.iso }}{% endif %}
                                    {% if photo.exposureCompensation %}{% if photo.focalLength or photo.aperture or photo.shutterSpeed or photo.iso %} • {% endif %}{{ photo.exposureCompensation }}{% endif %}
                                </div>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>

            {# Photo Lightbox Modal #}
            <div
                data-photo-lightbox-target="modal"
                class="hidden fixed inset-0 z-50 bg-ink/95"
                data-action="click->photo-lightbox#closeOnBackdrop touchstart->photo-lightbox#touchStart touchend->photo-lightbox#touchEnd"
            >
                {# Close button - Minimal refined #}
                <button
                    data-action="click->photo-lightbox#close"
                    class="absolute top-6 right-6 z-50 w-10 h-10 flex items-center justify-center rounded-md bg-bone/10 hover:bg-bone/20 text-bone/80 hover:text-bone transition-all duration-200"
                    aria-label="Close lightbox"
                >
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>

                {# Navigation buttons - Clean minimal #}
                <button
                    data-action="click->photo-lightbox#prev"
                    class="absolute left-6 top-1/2 -translate-y-1/2 z-50 w-12 h-12 flex items-center justify-center rounded-md bg-bone/10 hover:bg-bone/20 text-bone/70 hover:text-bone transition-all duration-200"
                    aria-label="Previous photo"
                >
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                    </svg>
                </button>

                <button
                    data-action="click->photo-lightbox#next"
                    class="absolute right-6 top-1/2 -translate-y-1/2 z-50 w-12 h-12 flex items-center justify-center rounded-md bg-bone/10 hover:bg-bone/20 text-bone/70 hover:text-bone transition-all duration-200"
                    aria-label="Next photo"
                >
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                    </svg>
                </button>

                {# Photo container #}
                <div class="flex items-center justify-center h-full px-6 py-24">
                    <div class="relative w-full h-full flex items-center justify-center">
                        {# Image #}
                        <img
                            data-photo-lightbox-target="image"
                            src=""
                            alt=""
                            class="max-w-full max-h-full object-contain"
                        />

                        {# Photo info overlay - Clean horizontal format like grid view #}
                        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-ink/90 via-ink/70 to-transparent pt-16 pb-6 px-8">
                            <h3
                                data-photo-lightbox-target="title"
                                class="font-display text-xl text-bone mb-2 tracking-tight"
                            ></h3>
                            <div
                                data-photo-lightbox-target="exif"
                                class="text-xs font-mono text-bone/70 tabular-nums"
                            ></div>
                        </div>

                        {# Counter - Simple clean format #}
                        <div class="absolute top-0 left-0 right-0 text-center pt-6">
                            <div
                                data-photo-lightbox-target="counter"
                                class="inline-block bg-bone/10 px-4 py-2 rounded-md text-xs font-mono text-bone/90 tabular-nums tracking-wider"
                            ></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% else %}
        {# Empty state #}
        <div class="relative max-w-2xl mx-auto px-6 md:px-8 pb-24 text-center">
            <div class="p-12 bg-bone/50 rounded-xl border border-stone/10">
                <svg class="w-16 h-16 text-stone/30 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                </svg>
                <h2 class="font-display text-2xl text-ink mb-2">No Photos Yet</h2>
                <p class="text-stone">Photos will appear here once they're published.</p>
            </div>
        </div>
    {% endif %}
</main>
{% endblock %}
