{% extends 'base.html.twig' %}

{% block title %}{{ collection.name }} - Protected Collection - Sam Wilkinson{% endblock %}

{% block description %}This collection is password-protected.{% endblock %}

{% block body_class %}accent-persimmon{% endblock %}

{% block body %}
<main class="relative bg-gradient-to-br from-paper via-bone to-daylight min-h-screen flex items-center justify-center">
    {# Subtle paper grain #}
    <div class="fixed inset-0 opacity-[0.02] mix-blend-multiply pointer-events-none" style="background-image: url('data:image/svg+xml,%3Csvg width=\'400\' height=\'400\' xmlns=\'http://www.w3.org/2000/svg\'%3E%3Cfilter id=\'grain\'%3E%3CfeTurbulence baseFrequency=\'1.5\' numOctaves=\'3\'/%3E%3C/filter%3E%3Crect width=\'400\' height=\'400\' filter=\'url(%23grain)\' opacity=\'0.5\'/%3E%3C/svg%3E');"></div>

    <div class="relative w-full max-w-md px-6">
        {# Back to collections link #}
        <div class="mb-8">
            <a href="{{ path('app_stills') }}" class="inline-flex items-center gap-2 text-sm font-mono text-stone hover:text-persimmon transition-colors duration-200">
                <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                </svg>
                Back to Collections
            </a>
        </div>

        {# Password Form Card #}
        <div class="bg-bone/80 backdrop-blur-sm border-l-4 border-persimmon px-8 py-10">
            {# Lock Icon #}
            <div class="mb-6">
                <div class="inline-flex items-center justify-center w-14 h-14 bg-walnut/10 rounded-sm">
                    <svg class="w-7 h-7 text-walnut" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
                    </svg>
                </div>
            </div>

            {# Collection Name #}
            <h1 class="font-display text-3xl md:text-4xl font-medium text-ink leading-tight mb-2" style="letter-spacing: -0.02em;">
                {{ collection.name }}
            </h1>

            {# Subtitle #}
            <p class="text-sm text-graphite mb-6">
                This collection is password-protected.
            </p>

            {# Flash Messages #}
            {% for message in app.flashes('error') %}
                <div class="mb-6 px-4 py-3 bg-persimmon/10 border-l-2 border-persimmon">
                    <p class="text-sm text-persimmon font-mono">{{ message }}</p>
                </div>
            {% endfor %}

            {# Password Form #}
            <form method="post" action="{{ path('app_stills_unlock', {slug: collection.slug}) }}" class="space-y-6">
                <input type="hidden" name="_token" value="{{ csrf_token('unlock-collection-' ~ collection.slug) }}">

                {# Password Input #}
                <div>
                    <label for="password" class="block text-xs font-mono uppercase tracking-wider text-stone mb-2">
                        Password
                    </label>
                    <input
                        type="password"
                        id="password"
                        name="password"
                        required
                        autofocus
                        autocomplete="off"
                        class="w-full px-4 py-3 bg-paper border border-stone/20 text-ink font-mono text-sm focus:outline-none focus:border-persimmon transition-colors duration-200"
                        placeholder="Enter password"
                    />
                </div>

                {# Submit Button #}
                <button
                    type="submit"
                    class="w-full px-6 py-3 bg-persimmon text-bone font-mono text-sm uppercase tracking-wider hover:bg-[#d55a3a] focus:outline-none focus:ring-2 focus:ring-persimmon focus:ring-offset-2 focus:ring-offset-bone transition-all duration-200"
                >
                    Unlock Collection
                </button>
            </form>

            {# Help Text #}
            <div class="mt-8 pt-6 border-t border-stone/20">
                <p class="text-xs text-stone leading-relaxed">
                    Don't have the password? <a href="mailto:contact@samwilkinson.com" class="text-persimmon hover:underline">Contact me</a> if you believe you should have access to this collection.
                </p>
            </div>
        </div>

        {# Collection Meta Info #}
        {% if collection.locationName or collection.startDate %}
            <div class="mt-6 flex items-center justify-center gap-3 text-xs font-mono text-stone/60">
                {% if collection.locationName %}
                    <span>{{ collection.locationName }}</span>
                {% endif %}
                {% if collection.locationName and collection.startDate %}
                    <span>â€¢</span>
                {% endif %}
                {% if collection.startDate %}
                    <span class="tabular-nums">{{ collection.startDate|date('Y') }}</span>
                {% endif %}
            </div>
        {% endif %}
    </div>
</main>
{% endblock %}
